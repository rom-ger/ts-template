{
    "defaultSeverity": "error",
    "extends": ["tslint:recommended", "tslint-config-airbnb"],
    "jsRules": {},
    "autoFixOnSave": true,
    "rules": {
        "max-line-length": [true, 1000],
        "object-literal-sort-keys": false,
        "import-name": false,
        "interface-name": false,
        "prefer-const": false,
        "only-arrow-functions": false,
        "variable-name": false,
        "ter-indent": [true, 4],
        "newline-per-chained-call": [true, { "max-calls-per-line": 2 }],
        "member-access": false,
        "no-else-after-return": false,
        "function-name": false,
        "prefer-array-literal": false,
        "no-increment-decrement": false,
        "ws-jsx-alignment": [true],
        "semicolon": false
    },
    "rulesDirectory": []
}
